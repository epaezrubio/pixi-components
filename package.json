{
  "name": "pixi-components",
  "version": "1.3.2",
  "main": "dist/pixi-components.cjs.js",
  "module": "dist/pixi-components.es.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/epaezrubio/pixi-components.git"
  },
  "author": {
    "name": "Eduardo Paez Rubio",
    "email": "contact@devpaezrubio.com",
    "url": "https://devpaezrubio.com"
  },
  "types": "@types/main.d.ts",
  "files": [
    "dist",
    "@types"
  ],
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "preview": "vite preview",
    "build": "npm run build:check && npm run build:declarations && vite build",
    "build:check": "tsc --noEmit",
    "build:declarations": "tsc --project tsconfig.declarations.json",
    "release:major": "node ./scripts/generate-changelog.js major && git add CHANGELOG.md && npm version major -f",
    "release:minor": "node ./scripts/generate-changelog.js minor && git add CHANGELOG.md && npm version minor -f",
    "release:patch": "node ./scripts/generate-changelog.js patch && git add CHANGELOG.md && npm version patch -f"
  },
  "devDependencies": {
    "@types/dat.gui": "0.7.7",
    "@types/node": "17.0.36",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "dat.gui": "0.7.9",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.6.2",
    "semver": "7.3.7",
    "simple-git": "3.7.1",
    "typescript": "4.5.4",
    "vite": "2.9.9",
    "vitest": "0.13.0"
  },
  "peerDependencies": {
    "pixi.js": "^6.0.0"
  },
  "optionalDependencies": {
    "vite": "2.9.9"
  }
}
